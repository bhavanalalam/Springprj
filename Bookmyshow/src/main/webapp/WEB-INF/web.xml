<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
   "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <!-- ContextLoaderListener for initializing the Spring context -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!-- Spring DispatcherServlet -->
    <servlet>
        <servlet-name>myds</servlet-name> <!-- Consistent servlet name -->
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup> <!-- Ensure it loads on startup -->
    </servlet>

    <!-- DispatcherServlet mapping -->
    <servlet-mapping>
        <servlet-name>myds</servlet-name> <!-- Same name as in the <servlet> -->
        <url-pattern>/</url-pattern> <!-- All URLs should be handled by DispatcherServlet -->
    </servlet-mapping>

    

</web-app>
